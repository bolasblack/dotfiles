[user]
	name = bolasblack
	email = bolasblack@gmail.com
[core]
	editor = vim
	excludesfile = ~/dotfiles/.gitignore_global
[color]
	status = auto
	branch = auto
	diff = auto
	ui = true
	pager = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	co = checkout
	cb = checkout -b
	br = branch
	cm = commit
	st = status
[push]
	default = upstream
[github]
	user = bolasblack
[difftool "ks"]
	cmd = ksdiff --partial-changeset --relative-path "$MERGED" -- "$LOCAL" "$REMOTE"
[mergetool "ks"]
	cmd = ksdiff --merge --output "$MERGED" --base "$BASE" -- "$LOCAL" "$REMOTE"
